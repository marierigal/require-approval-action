{
  "name": "require-approve-action",
  "version": "1.1.0",
  "description": "GitHub Action to check if the PR has been approved",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "repository": "https://github.com/marierigal/require-approve-action.git",
  "homepage": "https://github.com/marierigal/require-approve-action#readme",
  "bugs": {
    "url": "https://github.com/marierigal/require-approve-action/issues"
  },
  "author": "Marie Rigal <marierigal4@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "yarn": ">=1.20"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "lint": "run-s lint:*",
    "lint:ts": "eslint src/**/*.ts --fix",
    "lint:prettier": "prettier src/**/*.ts --write --loglevel=warn",
    "test": "jest",
    "ci:validate": "yarn lint && yarn test",
    "ci:release": "semantic-release"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@octokit/rest": "^18.1.1",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.20",
    "@types/jest-when": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-when": "^3.2.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "semantic-release": "^17.3.9",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint:ts",
      "yarn lint:prettier"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
